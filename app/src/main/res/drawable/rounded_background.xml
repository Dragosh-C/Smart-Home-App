<!-- res/drawable/container_with_margin.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer layer for the margin effect -->
    <item>
        <shape>
            <solid android:color="#80B0B0C4" /> <!-- Margin color -->
            <corners android:radius="22dp" /> <!-- Larger radius for margin -->
        </shape>
    </item>

    <!-- Inner layer for the main container -->
    <item android:left="1.5dp" android:right="1.5dp" android:top="1.5dp" android:bottom="1.5dp">
        <shape>
            <solid android:color="#801c1d23" /> <!-- Interior color -->
            <corners android:radius="20dp" /> <!-- Smaller radius for inner shape -->
        </shape>
    </item>

</layer-list>
