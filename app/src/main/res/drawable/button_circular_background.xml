
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Outline color -->
    <solid android:color="@android:color/transparent" />

    <!-- Outer rounded border for the margin effect -->
    <stroke
        android:width="2dp"
        android:color="#555555" /> <!-- Color of the outline -->

    <!-- Rounded corners -->
    <corners android:radius="50dp" />

    <!-- Padding to add spacing between text and border -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>

