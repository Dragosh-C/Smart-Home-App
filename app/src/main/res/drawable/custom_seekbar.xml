<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Track -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="25dp"/>  <!-- Adjust thickness here -->
            <solid android:color="#555555"/>  <!-- Inactive track color -->
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Progress Bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="25dp"/>  <!-- Adjust thickness here -->
                <solid android:color="#FFD700"/>  <!-- Active track color (yellow) -->
                <corners android:radius="5dp"/>
            </shape>
        </clip>
    </item>




</layer-list>
