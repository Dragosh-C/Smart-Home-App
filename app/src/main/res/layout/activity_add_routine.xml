<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">


    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create routine"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="32dp" />


    <EditText
        android:id="@+id/routine_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Routine name"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- IF Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_marginBottom="8dp" />


    <LinearLayout
        android:id="@+id/if_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/if_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#2EA043"
            android:textSize="24sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add what will trigger this routine"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- THEN Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Then"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_marginBottom="8dp" />


    <LinearLayout
        android:id="@+id/then_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/then_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#2EA043"
            android:textSize="24sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add what this routine will do"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat every day"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Save"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Other layout content goes here -->

        <Button
            android:id="@+id/other_routines_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other types of routines"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            />

    </RelativeLayout>


</LinearLayout>
