<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gardient"
    android:padding="16dp">


    <ImageView
        android:id="@+id/backButton_settings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"

        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="22dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backButton_settings"

        />

    <!-- Card-style container for text and switch -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"

        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeColor="@android:color/white"
        app:strokeWidth="0.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:background="#50575757">

            <TextView
                android:id="@+id/tv_enable_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Location Tracking"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                style="?attr/textAppearanceHeadline6" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_enable_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"

           app:cardCornerRadius="16dp"
           app:cardElevation="8dp"
           app:cardBackgroundColor="@android:color/transparent"
           app:strokeColor="@android:color/white"
           app:strokeWidth="0.5dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp"
               android:elevation="4dp"
               android:gravity="center_vertical"
               android:background="#50575757">

               <TextView
                   android:id="@+id/tv_change_home_location"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Change Home Location"
                   android:textSize="18sp"
                   android:textColor="@android:color/white"
                   android:fontFamily="sans-serif-medium"
                   style="?attr/textAppearanceHeadline6" />

               <!-- Switch Button -->
<!--               <androidx.appcompat.widget.SwitchCompat-->
<!--                   android:id="@+id/switch_enable_location"-->
<!--                   android:layout_width="wrap_content"-->
<!--                   android:layout_height="wrap_content" />-->
               <Button
                   android:id="@+id/btn_change_home_location"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Change"
                   />
           </LinearLayout>

       </com.google.android.material.card.MaterialCardView>


       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"

           app:cardCornerRadius="16dp"
           app:cardElevation="8dp"
           app:cardBackgroundColor="@android:color/transparent"
           app:strokeColor="@android:color/white"
           app:strokeWidth="0.5dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp"
               android:elevation="4dp"
               android:gravity="center_vertical"
               android:background="#50575757">

               <TextView
                   android:id="@+id/tv_enable_alarm"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Enable Alarm"
                   android:textSize="18sp"
                   android:textColor="@android:color/white"
                   android:fontFamily="sans-serif-medium"
                   style="?attr/textAppearanceHeadline6" />


              <androidx.appcompat.widget.SwitchCompat
                  android:id="@+id/switch_enable_alarm"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="5dp"
                  />

               <Button
                   android:id="@+id/btn_test_alarm"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Test"
                   />
           </LinearLayout>

       </com.google.android.material.card.MaterialCardView>


       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"

           app:cardCornerRadius="16dp"
           app:cardElevation="8dp"
           app:cardBackgroundColor="@android:color/transparent"
           app:strokeColor="@android:color/white"
           app:strokeWidth="0.5dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp"
               android:elevation="4dp"
               android:gravity="center_vertical"
               android:background="#50575757">

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Lock Door"
                   android:textSize="18sp"
                   android:textColor="@android:color/white"
                   android:fontFamily="sans-serif-medium"
                   style="?attr/textAppearanceHeadline6" />

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/lock_door"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </com.google.android.material.card.MaterialCardView>


       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"

           app:cardCornerRadius="16dp"
           app:cardElevation="8dp"
           app:cardBackgroundColor="@android:color/transparent"
           app:strokeColor="@android:color/white"
           app:strokeWidth="0.5dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp"
               android:elevation="4dp"
               android:gravity="center_vertical"
               android:background="#50575757">

               <TextView
                   android:id="@+id/enable_password_access"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Enable Access with PIN in house"
                   android:textSize="18sp"
                   android:textColor="@android:color/white"
                   android:fontFamily="sans-serif-medium"
                   style="?attr/textAppearanceHeadline6" />

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/enable_access_with_password"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"

           app:cardCornerRadius="16dp"
           app:cardElevation="8dp"
           app:cardBackgroundColor="@android:color/transparent"
           app:strokeColor="@android:color/white"
           app:strokeWidth="0.5dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp"
               android:elevation="4dp"
               android:gravity="center_vertical"
               android:background="#50575757">

               <TextView
                   android:id="@+id/enable_rfid_access"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Enable Access with RFID in house"
                   android:textSize="18sp"
                   android:textColor="@android:color/white"
                   android:fontFamily="sans-serif-medium"
                   style="?attr/textAppearanceHeadline6" />

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/enable_access_with_rfid"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </com.google.android.material.card.MaterialCardView>



       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"

           app:cardCornerRadius="16dp"
           app:cardElevation="8dp"
           app:cardBackgroundColor="@android:color/transparent"
           app:strokeColor="@android:color/white"
           app:strokeWidth="0.5dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:background="#50575757">

                <EditText
                     android:id="@+id/tv_change_password"
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:hint="Change Door Lock PIN"
                     android:textSize="18sp"
                     android:textColor="@android:color/white"
                     android:fontFamily="sans-serif-medium"
                     style="?attr/textAppearanceHeadline6" />

                <Button
                     android:id="@+id/btn_change_password"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Change" />
              </LinearLayout>
       </com.google.android.material.card.MaterialCardView>
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
